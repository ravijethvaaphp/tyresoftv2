{
  "name": "tyresoft",
  "version": "1.0.5",
  "main": "main.js",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "test": "ng test",
    "lint": "ng lint",
    "e2e": "ng e2e",
    "postinstall": "install-app-deps",
    "electron": "ng build  && electron .",
    "electron-aot": "ng build && electron .",
    "publish": "build  --win -p always"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^7.0.4",
    "@angular/common": "^7.0.4",
    "@angular/compiler": "^7.0.4",
    "@angular/core": "^7.0.4",
    "@angular/forms": "^7.0.4",
    "@angular/http": "^7.0.4",
    "@angular/platform-browser": "^7.0.4",
    "@angular/platform-browser-dynamic": "^7.0.4",
    "@angular/router": "^7.0.4",
    "@chenfengyuan/datepicker": "^1.0.1",
    "@ngx-translate/core": "^10.0.2",
    "@ngx-translate/http-loader": "^3.0.1",
    "bootstrap": "^4.1.3",
    "core-js": "^2.5.4",
    "datatables.net-bs4": "^1.10.19",
    "datatables.net-buttons-bs4": "^1.5.4",
    "datatables.net-colreorder-bs4": "^1.5.1",
    "datatables.net-select-bs4": "^1.2.7",
    "download-csv": "^1.1.1",
    "electron-log": "^2.2.17",
    "electron-updater": "^4.0.6",
    "jquery": "^3.3.1",
    "jstree": "^3.3.7",
    "ngx-electron": "^1.0.4",
    "popper.js": "^1.14.3",
    "rxjs": "^6.3.3",
    "sqlite3": "^4.0.4",
    "toastr": "^2.1.4",
    "update-electron-app": "^1.3.0",
    "zone.js": "^0.8.26"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^0.10.6",
    "@angular/cli": "~7.0.6",
    "@angular/compiler-cli": "^7.0.4",
    "@angular/language-service": "^7.0.4",
    "@types/jasmine": "~2.8.6",
    "@types/jasminewd2": "~2.0.3",
    "@types/node": "~8.9.4",
    "codelyzer": "~4.2.1",
    "electron": "^2.0.6",
    "electron-builder": "^20.36.2",
    "jasmine-core": "~2.99.1",
    "jasmine-spec-reporter": "~4.2.1",
    "karma": "~1.7.1",
    "karma-chrome-launcher": "~2.2.0",
    "karma-coverage-istanbul-reporter": "~2.0.0",
    "karma-jasmine": "~1.1.1",
    "karma-jasmine-html-reporter": "^0.2.2",
    "protractor": "^5.4.1",
    "ts-node": "~5.0.1",
    "tslint": "~5.9.1",
    "typescript": "~3.1.6"
  },
  "build": {
    "appId": "com.tyresoft.biz",
    "productName": "Tyresoft",
    "icon": "Icon/iconr_ebd_icon.ico",
    "directories": {
      "output": "packaged"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ]
    },
    "target": "NSIS",
    "nsis": {
      "allowToChangeInstallationDirectory": true,
      "oneClick": false,
      "installerIcon": "Icon/iconr_ebd_icon.ico",
      "uninstallerIcon": "Icon/iconr_ebd_icon.ico",
      "createDesktopShortcut": true
    },
    "publish": [
      {
        "provider": "github",
        "owner": "ravijethvaaphp",
        "repo": "tyresoftv2"
      }
    ]
  }
}
